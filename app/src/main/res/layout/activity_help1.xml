<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.joo.indianpoker.Help1"

    android:id="@+id/activity_help1"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorAccent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >


    <Button
        android:text="Main"

        android:id="@+id/giveup_button"

        android:layout_marginRight="83dp"
        android:layout_marginEnd="83dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/helpbtn"

        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        style="@android:style/Widget.Button"

        android:onClick="main_click" />

    <Button
        android:text="Next"

        android:id="@+id/RankingButton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/giveup_button"
        android:layout_toStartOf="@+id/giveup_button"

        android:background="@drawable/helpbtn"

        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#ffffff"
        style="@android:style/Widget.Button"

        android:onClick="bet_click" />

    <ImageView
        android:id="@+id/imageView"

        app:srcCompat="@drawable/basicrule"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>